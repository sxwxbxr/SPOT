{
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=spot;Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD};Ssl Mode=Disable"
  },
  "OpenSearch": {
    "Uri": "http://localhost:9200",
    "Username": "${OPENSEARCH_USERNAME}",
    "Password": "${OPENSEARCH_PASSWORD}",
    "DisableSslVerification": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://localhost:5173",
      "http://localhost:5000",
      "https://localhost:5001"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  }
}
